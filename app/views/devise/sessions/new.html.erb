<div class="box login">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "floatingInput", title:'Use "bob@example.com"', placeholder: "Email"  %>
      <label for="floatingInput">Email address</label>
    </div>
    <div class="field form-floating">
      <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "floatingPassword", title:'Use "password"', placeholder: "Password" %>
      <label for="floatingPassword">Password</label>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>
